<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_page_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        />

    <!--<com.ql.jcjr.view.ActionBar-->
        <!--android:id="@+id/ab_header"-->
        <!--xmlns:bar="http://schemas.android.com/apk/res-auto"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--bar:bottom_divider_visibility="gone"-->
        <!--bar:left_first_visibility="invisible"-->
        <!--bar:title="产品列表"/>-->
    <LinearLayout
        android:background="@color/c_fffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_98px">
        <TextView
            android:id="@+id/tv_moren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="默认"
            android:gravity="center"
            android:textSize="@dimen/size_xl"
            android:textColor="@color/btn_main"
            android:layout_height="match_parent" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rl_apr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_apr"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利率"
                android:textSize="@dimen/size_xl"
                android:textColor="@color/font_black"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_20px"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_apr_up"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_gray_wdtz" />
                <ImageView
                    android:id="@+id/iv_apr_down"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_down_wdtz" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_time"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限"
                android:textSize="@dimen/size_xl"
                android:textColor="@color/font_black"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_20px"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_order_paytime"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_time_up"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_gray_wdtz" />
                <ImageView
                    android:id="@+id/iv_time_down"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_down_wdtz" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_jindu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_jindu"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度"
                android:textSize="@dimen/size_xl"
                android:textColor="@color/font_black"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_20px"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_jindu_up"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_gray_wdtz" />
                <ImageView
                    android:id="@+id/iv_jindu_down"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:layout_width="@dimen/dimen_16px"
                    android:layout_height="@dimen/dimen_12px"
                    android:src="@drawable/arrow_down_wdtz" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.ql.jcjr.view.PullToRefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ql.jcjr.view.XListView
            android:id="@+id/lv_yyy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/c_page_bg"
            android:dividerHeight="@dimen/dimen_20px"
            android:listSelector="@color/transparent"
             />

    </com.ql.jcjr.view.PullToRefreshView>


    <RadioGroup
        android:id="@+id/rg__manage_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_68px"
        android:layout_marginBottom="@dimen/dimen_30px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/tab_yyy"
            style="@style/style_tab_manage_money"
            android:background="@drawable/tab_left_manage_money_selector"
            android:checked="true"
            android:text="月月盈"/>

        <RadioButton
            android:id="@+id/tab_ttl"
            style="@style/style_tab_manage_money"
            android:background="@drawable/tab_mindle_manage_money_selector"
            android:text="天天利"/>

        <RadioButton
            android:id="@+id/tab_xszx"
            style="@style/style_tab_manage_money"
            android:background="@drawable/tab_right_manage_money_selector"
            android:text="新手专享"/>

    </RadioGroup>

    <com.ql.jcjr.view.NoScrollViewPager
        android:id="@+id/cvw_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/another_login"
        android:layout_below="@+id/ll_layout"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"
        android:visibility="gone"/>

</LinearLayout>