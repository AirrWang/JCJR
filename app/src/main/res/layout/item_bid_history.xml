<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_text_margin"
        android:paddingRight="@dimen/row_text_margin"
        android:paddingTop="@dimen/dimen_24px"
        android:paddingBottom="@dimen/dimen_24px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/iv_bid_history_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_decorate_lclb"/>

                <TextView
                    android:id="@+id/tv_bid_history_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16px"
                    android:textSize="@dimen/size_l"
                    android:textColor="@color/font_black"
                    android:text="助农保 2017-02-06"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30px"
                android:layout_marginLeft="@dimen/dimen_48px"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="投资本金(元)"-->
                    <!--android:textColor="@color/font_grey"-->
                    <!--android:textSize="@dimen/size_m" />-->

                <TextView
                    android:id="@+id/tv_bid_history_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/size_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6px"
                    android:text="投资本金(元)"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/size_m" />


            </LinearLayout>
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_bid_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_s"
                android:textColor="#fff"
                android:background="@drawable/icon_bid_history_mj"
                android:gravity="center"
                android:text="募集中"/>

            <TextView
                android:id="@+id/tv_bid_history_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20px"
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_black"
                android:gravity="center"
                android:text="100"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6px"
                android:textSize="@dimen/size_m"
                android:textColor="@color/font_grey"
                android:gravity="center"
                android:text="预期收益(元)"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/tv_bid_history_divider"
        style="@style/common_divider_without_margin"/>

    <TextView
        android:id="@+id/tv_bid_history_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20px"
        android:paddingBottom="@dimen/dimen_20px"
        android:paddingLeft="@dimen/dimen_80px"
        android:textSize="@dimen/size_m"
        android:textColor="@color/font_grey"
        android:text="到期时间  2017.10.20"/>

</LinearLayout>