<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:bar="http://schemas.android.com/apk/res-auto"
                android:id="@+id/webviewlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:left_first_visibility="invisible"
        bar:bottom_divider_visibility="gone"
        bar:title="理财"/>

    <TextView
        android:id="@+id/tv_request_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ab_title"
        android:layout_margin="2dp"
        android:background="#a8915e"
        android:focusable="true"
        android:gravity="left"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:visibility="gone"/>

    <com.ql.jcjr.view.MyWebView
        android:id="@+id/wb_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_request_url" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/image_progress" />

    <TextView
        android:id="@+id/tv_load_error"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_request_url"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/web_load_click_reload"
        android:textColor="#6c6e6e"
        android:visibility="gone" />

</RelativeLayout>