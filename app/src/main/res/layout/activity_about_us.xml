<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_page_bg"
    android:orientation="vertical">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:left_first_visibility="visible"
        bar:bottom_divider_visibility="gone"
        bar:title="关于"/>

    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/tv_about_us"
        android:layout_marginTop="@dimen/row_distance"
        app:rightTitleVisibility="gone"
        app:titleTextLess="关于积财" />

    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/tv_official"
        app:titleTextLess="官方网站"
        app:rightTitleText="@string/official_website"/>

    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/tv_praise"
        app:bottomLineVisibilityLess="gone"
        app:titleTextLess="为此版本评分"/>

</LinearLayout>