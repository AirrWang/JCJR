<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_300px"
              android:gravity="center_horizontal"
              android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_240px"
        android:layout_margin="@dimen/dimen_30px"
        android:background="@drawable/bg_bank_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_marginTop="@dimen/dimen_30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.ql.jcjr.view.CircleImageView
                    android:layout_width="@dimen/dimen_110px"
                    android:layout_height="@dimen/dimen_110px"
                    android:contentDescription="@null"
                    android:src="@color/white"/>

                <com.ql.jcjr.view.CircleImageView
                    android:id="@+id/civ_icon"
                    android:layout_width="@dimen/dimen_98px"
                    android:layout_height="@dimen/dimen_98px"
                    android:contentDescription="@null"
                    android:layout_gravity="center"/>
            </FrameLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bank_name"
                    style="@style/text_30_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_bank_branch"
                    style="@style/text_24_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6px"/>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_card_num"
            style="@style/text_30_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:layout_marginRight="@dimen/dimen_58px"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>