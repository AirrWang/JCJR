<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_80px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:layout_marginRight="@dimen/dimen_50px"
            android:gravity="center_horizontal"
            android:background="@drawable/corner_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/delete_popup_tx"
                    android:padding="@dimen/dimen_36px"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/dimen_30px"
                    android:text="提现验证码"/>
                <TextView
                    android:id="@+id/tv_re_get"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_28px"
                    android:paddingRight="@dimen/dimen_36px"
                    android:textColor="@color/text_hint_color"
                    android:text="重新获取"/>
            </RelativeLayout>


            <View style="@style/common_divider_without_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18px"
                android:layout_marginBottom="@dimen/dimen_30px"
                style="@style/text_30_666"
                android:text="提现"/>

            <TextView
                android:id="@+id/tv_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_64px"
                android:textColor="@color/c03_333333"
                android:text="¥ 275.00"/>

            <com.ql.jcjr.view.PwdEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_88px"
                android:layout_marginLeft="@dimen/dimen_46px"
                android:layout_marginRight="@dimen/dimen_46px"
                android:layout_marginTop="@dimen/dimen_46px"
                android:layout_marginBottom="@dimen/dimen_40px"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:enabled="true"
                android:focusable="true"
                android:maxLength="6"
                android:singleLine="true"
                android:numeric="integer"/>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="@dimen/dimen_52px">-->

            <!--<TextView-->

            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/dimen_30px"-->
            <!--android:layout_marginLeft="@dimen/dimen_46px"-->
            <!--android:textColor="@color/text_hint_color"-->
            <!--android:text="重新获取"/>-->

            <!--</LinearLayout>-->



        </LinearLayout>



        <include
            android:id="@+id/ll_jianpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_jianpan"/>




</LinearLayout>