<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20px" />
    <LinearLayout
        android:paddingLeft="@dimen/dimen_30px"
        android:background="@color/c_fffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称"/>
            <TextView
                android:id="@+id/tv_bid_detail_title"
                android:layout_marginLeft="@dimen/dimen_54px"
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品标签"/>
            <TextView
                android:id="@+id/tv_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_54px"
                android:background="@drawable/bg_tag_red"
                android:gravity="center"
                android:text="积财精选"
                android:textColor="@color/font_red"
                android:textSize="@dimen/size_s"/>
            <TextView
                android:id="@+id/tv_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15px"
                android:background="@drawable/bg_tag_red"
                android:gravity="center"
                android:text="积财精选"
                android:textColor="@color/font_red"
                android:textSize="@dimen/size_s"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计息方式"/>
            <TextView
                android:id="@+id/tv_is_lz"
                android:layout_marginLeft="@dimen/dimen_54px"
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款方式"/>
            <TextView
                android:id="@+id/tv_bid_detail_getmoney"
                android:layout_marginLeft="@dimen/dimen_54px"
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_30px"
            android:layout_marginTop="@dimen/dimen_30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已募集时长"/>
            <TextView
                android:id="@+id/tv_bid_time"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:textSize="@dimen/size_l"
                android:textColor="@color/font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>