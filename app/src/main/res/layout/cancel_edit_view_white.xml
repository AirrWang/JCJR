<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimen_36px"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_36px" />

        <EditText
            android:id="@+id/et_content"
            style="@style/text_s_m_c_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColorHint="@color/font_grey" />

        <ImageView
            android:id="@+id/iv_cancel_icon"
            android:layout_width="@dimen/dimen_36px"
            android:layout_height="@dimen/dimen_36px"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:src="@drawable/enter_cancel_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_extra_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:textSize="@dimen/size_m"
            android:textColor="@color/btn_main"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_extra_operate"
            android:padding="@dimen/dimen_4px"
            android:layout_width="@dimen/dimen_36px"
            android:layout_height="@dimen/dimen_36px"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:src="@drawable/enter_cancel"
             />

    </LinearLayout>

</LinearLayout>