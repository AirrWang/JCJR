<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="@color/c_page_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/c_page_bg">

        <FrameLayout
            android:id="@+id/ll_advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.ql.jcjr.view.LoopPager.LoopViewPager
                android:id="@+id/in_advert"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_344px" >
            </com.ql.jcjr.view.LoopPager.LoopViewPager>

            <LinearLayout
                android:id="@+id/ll_viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/dimen_32px"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_funs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_advert"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_36px"
            android:paddingTop="@dimen/dimen_36px">

            <ImageView
                android:id="@+id/iv_fun_xsfl"
                android:layout_width="@dimen/home_fun_w"
                android:layout_height="@dimen/home_fun_h"
                android:layout_marginRight="@dimen/dimen_42px"
                android:scaleType="fitXY"
                android:src="@drawable/img_xsfl_sy" />

            <View style="@style/common_divider_without_margin_v" />

            <ImageView
                android:id="@+id/iv_fun_yqyl"
                android:layout_width="@dimen/home_fun_w"
                android:layout_height="@dimen/home_fun_h"
                android:layout_marginLeft="@dimen/dimen_42px"
                android:scaleType="fitXY"
                android:src="@drawable/img_yqyl_sy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_marqueeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_funs"
            android:layout_marginTop="@dimen/dimen_20px"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_speaker1"
                android:layout_width="@dimen/dimen_184px"
                android:layout_height="@dimen/dimen_32px"
                android:layout_marginLeft="@dimen/dimen_28px"
                android:layout_marginRight="@dimen/dimen_16px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_msg_sy"/>

            <View style="@style/common_divider_without_margin_v" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/marqueeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20px"
                app:mvTextColor="#000000"
                app:mvTextSize="@dimen/dimen_22px"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/ling_qian_bao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_marqueeView">

            <include
                layout="@layout/layout_ling_qian_bao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginRight="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_20px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_xszx_sy"
                android:layout_marginTop="@dimen/dimen_48px"
                android:layout_marginLeft="@dimen/dimen_10px"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ling_qian_bao"
            android:layout_marginTop="@dimen/dimen_16px"
            android:layout_marginBottom="@dimen/dimen_16px"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dimen_34px"
                android:layout_height="@dimen/dimen_36px"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/dimen_10px"
                android:src="@drawable/icon_yhck_sy"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_grey"
                android:text="银行存管对接中"
                android:textSize="@dimen/size_s"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_selective_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ling_qian_bao"
            android:layout_marginTop="@dimen/dimen_26px"
            android:layout_marginBottom="@dimen/dimen_14px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:textSize="@dimen/dimen_20px"
            android:textColor="@color/c_101010"
            android:text="精选理财"
            android:visibility="gone"/>

        <com.ql.jcjr.view.NoScrollListView
            android:id="@+id/lv_selective_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25px"
            android:layout_below="@id/tv_selective_finance"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:visibility="gone"/>



    </RelativeLayout>

</ScrollView>