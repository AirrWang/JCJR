<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ql.jcjr.activity.CapitalStatisticsActivity">
    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:left_first_visibility="visible"
        bar:bottom_divider_visibility="gone"
        bar:title="资金统计"/>
    <ScrollView
        android:id="@+id/sv_myaccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_241px"
                android:background="@drawable/zj_background"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/dimen_48px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_26px"
                        android:text="资产总额"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/dimen_26px" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_3px"
                    android:layout_height="@dimen/dimen_114px"
                    android:src="@drawable/zj_fgx" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/dimen_48px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_26px"
                        android:text="累计收益"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/dimen_26px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cash_total"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_98px"
                android:layout_marginTop="@dimen/dimen_20px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_weight="1"
                    android:text="我的资产"
                    android:textColor="@color/font_black"
                    android:textSize="15sp" />

                <com.ql.jcjr.view.PFMediaText
                    android:id="@+id/pftv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:textColor="@color/font_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_total"
                    android:layout_width="@dimen/dimen_28px"
                    android:layout_height="@dimen/dimen_28px"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:src="@drawable/down_go" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen_22px"
                android:id="@+id/ll_1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="待收本金"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="待收收益"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="可用余额"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_use_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="投资冻结金额"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_tender_frozen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="提现中金额"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_cash_frozen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_other_forzen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="7"
                        android:text="其他冻结金额"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:text="查看"
                        android:textColor="@color/font_red"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:gravity="end"
                        android:id="@+id/tv_cash_froze_other"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="7"
                        android:text="逾期金额"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:text="查看"
                        android:textColor="@color/font_red"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:gravity="end"
                        android:id="@+id/tv_cash_overdue"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cash_earn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_98px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_weight="1"
                    android:text="我的收益"
                    android:textColor="@color/font_black"
                    android:textSize="15sp" />

                <com.ql.jcjr.view.PFMediaText
                    android:id="@+id/pftv_earn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:textColor="@color/font_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_earn"
                    android:layout_width="@dimen/dimen_28px"
                    android:layout_height="@dimen/dimen_28px"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:src="@drawable/down_go" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/ll_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="已收利息"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_interest_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_98px"
                    android:layout_marginBottom="@dimen/dimen_60px"
                    android:layout_marginTop="0.5dp"
                    android:background="#FBFBFB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30px"
                        android:layout_weight="1"
                        android:text="已使用红包"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />

                    <TextView
                        android:id="@+id/tv_awards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_30px"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/dimen_28px" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        
    </ScrollView>

</LinearLayout>