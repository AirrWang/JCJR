<?xml version="1.0" encoding="UTF-8"?>

<!-- 主要內容：左边的icon， 左边的标题，右边的备注信息，跳转按钮图标 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/view_top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/rl_content_layout"
        android:background="@color/divider_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_30px">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30px"
            android:padding="@dimen/dimen_6px"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="@dimen/dimen_14px"
            android:layout_height="@dimen/dimen_14px"
            android:layout_alignRight="@id/iv_left_icon"
            android:layout_alignTop="@id/iv_left_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <!-- @dimen/dimen_94px -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_left_icon">

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/indicator_color_normal"
                android:textSize="@dimen/dimen_30px"/>


            <TextView
                android:id="@+id/tv_additional_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10px"
                android:layout_toRightOf="@id/tv_title_name"
                android:paddingLeft="@dimen/dimen_8px"
                android:paddingRight="@dimen/dimen_8px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:layout_marginRight="@dimen/dimen_20px"
                android:layout_toLeftOf="@+id/ll_right"
                android:layout_toRightOf="@id/tv_title_name"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:visibility="invisible"
                android:textSize="@dimen/dimen_30px"
                android:textColor="@color/indicator_color_normal"/>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.ql.jcjr.view.CircleImageView
                        android:id="@+id/civ_photo"
                        android:layout_width="@dimen/dimen_50px"
                        android:layout_height="@dimen/dimen_50px"
                        android:layout_marginRight="@dimen/dimen_40px"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_normal_img"
                        android:layout_width="@dimen/dimen_44px"
                        android:layout_height="@dimen/dimen_44px"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_action_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_left_icon"
            android:background="@color/divider_color"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_full_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"
        android:visibility="gone" />

</RelativeLayout>