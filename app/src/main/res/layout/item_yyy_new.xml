<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24px"
        android:layout_marginLeft="@dimen/dimen_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:textSize="@dimen/size_l"
            android:textColor="@color/font_black"
            android:text="月月盈第三期"/>

        <TextView
            android:padding="@dimen/dimen_4px"
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:background="@drawable/bg_rectangle_circl_circl_5"
            android:gravity="center"
            android:text="积财精选"
            android:textColor="#E7723E"
            android:textSize="@dimen/size_s"/>
        <TextView
            android:padding="@dimen/dimen_4px"
            android:id="@+id/tv_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:background="@drawable/bg_rectangle_circl_circl_5_f5a623"
            android:gravity="center"
            android:text="积财精选"
            android:textColor="#F5A623"
            android:textSize="@dimen/size_s"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/item_yyy_padding_r"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_biao_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_6px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_apr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_xxxl"
                    android:textColor="@color/font_red"
                    android:text="10.8"/>
                <TextView
                    android:id="@+id/tv_apr_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_xl"
                    android:textColor="@color/font_red"
                    android:text=" %"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_biao_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_biao_left"
                android:layout_alignBottom="@id/ll_biao_left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_yyy_apr"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_annualized_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.8"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/size_m" />
                <TextView
                    android:id="@+id/tv_annualized_rate_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_s"
                    android:textColor="@color/font_red"
                    android:text="%"/>

                <TextView
                    android:id="@+id/tv_annualized_rate_gain_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_s"
                    android:textColor="@color/font_red"
                    android:text="+"/>
                <TextView
                    android:id="@+id/tv_annualized_rate_gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_m"
                    android:textColor="@color/font_red"
                    android:text="0.8"/>

                <TextView
                    android:id="@+id/tv_annualized_rate_gain_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/size_s" />
            </LinearLayout>
            <TextView
                android:textSize="@dimen/size_m"
                android:textColor="@color/font_grey"
                android:layout_below="@+id/ll_biao_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望年化利率"/>

        </RelativeLayout>
        <View
            android:background="@color/divider_color"
            android:layout_width="@dimen/dimen_2px"
            android:layout_height="@dimen/dimen_60px"/>
        <LinearLayout
            android:paddingLeft="@dimen/dimen_40px"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/size_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品期限"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_4px"
                    android:id="@+id/tv_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    style="@style/text_30_666"
                    android:textSize="@dimen/size_m"
                    android:text="30天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_15px"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/size_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余可售"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_4px"
                    android:id="@+id/tv_available_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="200元"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/size_m"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2px"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_below="@+id/tv_percent"
            android:id="@+id/pb_percentage"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            style="@style/progressbar_horizontal_style"/>

        <TextView
            android:layout_marginRight="@dimen/dimen_30px"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_xs"
            android:textColor="@color/btn_main"
            android:text="100%"/>

    </RelativeLayout>

</LinearLayout>