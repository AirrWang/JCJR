<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_view_height"/>

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80px"
        style="@style/text_f04_30_c05_999999"
        android:text="欢迎回来"/>

    <com.ql.jcjr.view.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/dimen_120px"
        android:layout_height="@dimen/dimen_120px"
        android:layout_marginTop="@dimen/dimen_48px"
        android:src="@drawable/gesture_user_icon"/>
    <LinearLayout
        android:id="@+id/ll_call_finger"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/touchid"
            android:layout_width="@dimen/dimen_144px"
            android:layout_height="@dimen/dimen_144px" />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
<LinearLayout
    android:layout_marginBottom="@dimen/dimen_75px"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_gesture_finger"
        android:paddingLeft="@dimen/dimen_100px"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="使用指纹解锁"
        android:paddingBottom="@dimen/dimen_10px"
        android:paddingTop="@dimen/dimen_10px"
        style="@style/text_26_666" />
    <TextView
        android:gravity="end"
        android:layout_weight="1"
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_100px"
        android:paddingBottom="@dimen/dimen_10px"
        android:paddingTop="@dimen/dimen_10px"
        style="@style/text_26_666"
        android:text="账号登录"/>
</LinearLayout>


</LinearLayout>
