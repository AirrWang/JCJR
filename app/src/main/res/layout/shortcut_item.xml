<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/dimen_90px"
        android:layout_height="@dimen/dimen_90px"
        android:layout_marginTop="@dimen/dimen_18px"
        android:scaleType="centerInside"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_6px"/>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_18px"
        android:textSize="@dimen/dimen_22px"
        android:textColor="@color/c03_333333"/>

</LinearLayout>