<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_balance"
            style="@style/text_34_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="left"
            android:text="选择银行"
            android:textColor="@color/title_bg_color"/>

        <ImageView
            android:id="@+id/iv_close"
            style="@style/text_30_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_40px"
            android:padding="@dimen/dimen_6px"
            android:src="@drawable/arrow_down"/>

    </RelativeLayout>

    <View style="@style/common_divider_without_margin"/>

    <ListView
        android:id="@+id/lv_bank_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_380px"
        android:paddingTop="@dimen/dimen_30px"
        android:paddingBottom="@dimen/dimen_30px"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_10px"/>

</LinearLayout>