<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bit_confirm_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_view_height"/>

    <!--toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn_action_bar_back"
            android:paddingLeft="@dimen/actionbar_arrow_distance"
            android:paddingRight="@dimen/dimen_24px"
            android:layout_centerVertical="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="助农保"
            style="@style/style_action_bar_title"/>

    </RelativeLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/dimen_12px"
        android:background="@drawable/font_icon_yqnh"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_12px"-->
        <!--android:textSize="@dimen/size_m"-->
        <!--android:text="预期年化"-->
        <!--android:textColor="@color/font_actionbar_color" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_biao_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.8"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_big"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" %"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_m"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_biao_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12px"
            android:layout_toRightOf="@id/ll_biao_detail_left"
            android:layout_alignBottom="@id/ll_biao_detail_left"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ "
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_m"/>

            <TextView
                android:id="@+id/tv_apr_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.8"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_xxl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" %"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_m"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24px"
        android:layout_marginBottom="@dimen/dimen_32px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30天"
                        android:textStyle="bold"
                        android:textColor="@color/font_actionbar_color_less"
                        android:textSize="@dimen/size_m" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="投资期限"-->
                        <!--android:textColor="@color/font_actionbar_color_less"-->
                        <!--android:layout_marginTop="@dimen/dimen_8px"-->
                        <!--android:textSize="@dimen/size_s" />-->
                    <View
                        android:layout_width="50dp"
                        android:layout_height="18dp"
                        android:background="@drawable/font_icon_tzqx"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10px"
                android:layout_marginBottom="@dimen/dimen_10px"
                android:layout_marginRight="@dimen/dimen_24px"
                android:background="@color/font_actionbar_color"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/font_actionbar_color_less"
                    android:textSize="@dimen/size_m" />

                <!--<TextView-->
                    <!--android:id="@+id/tv_loan_after"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dimen_8px"-->
                    <!--android:text="项目总额"-->
                    <!--android:textColor="@color/font_actionbar_color_less"-->
                    <!--android:textSize="@dimen/size_s" />-->

                <View
                    android:id="@+id/tv_loan_after"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:background="@drawable/font_icon_xmze"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10px"
                android:layout_marginBottom="@dimen/dimen_10px"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:background="@color/font_actionbar_color"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_min_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/font_actionbar_color_less"
                        android:textSize="@dimen/size_m" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/dimen_8px"-->
                        <!--android:text="起投金额"-->
                        <!--android:textColor="@color/font_actionbar_color_less"-->
                        <!--android:textSize="@dimen/size_s" />-->

                    <View
                        android:layout_width="50dp"
                        android:layout_height="18dp"
                        android:background="@drawable/font_icon_qtje"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_detail_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24px"
            android:layout_marginBottom="@dimen/dimen_24px"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/progressbar_horizontal_style_grey_less"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="1dp"/>

            <ImageView
                android:id="@+id/iv_progress_light"
                android:layout_width="26dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/progress_light"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_detail_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:visibility="visible">

            <View
                android:id="@+id/tv_surplus_before"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:background="@drawable/font_icon_sykt"/>

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_surplus_before"
                android:text="10000"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_m" />

            <View
                android:id="@+id/tv_surplus_after"
                android:layout_width="12.5dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@id/tv_surplus"
                android:background="@drawable/font_icon_rmb"/>


            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="50%"
                android:textColor="@color/font_actionbar_color_less"
                android:textSize="@dimen/size_m" />

            <View
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@id/tv_percent"
                android:background="@drawable/font_icon_jd"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>