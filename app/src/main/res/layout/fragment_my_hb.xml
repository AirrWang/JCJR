<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_page_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32px">

        <TextView
            android:id="@+id/tv_hb_use_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32px"
            android:layout_marginRight="@dimen/dimen_32px"
            android:textSize="@dimen/size_m"
            android:textColor="@color/font_black"
            android:text="可用数量：0"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_hb_unuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32px"
            android:layout_marginRight="@dimen/dimen_32px"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_m"
            android:textColor="@color/font_actionbar_color"
            android:text="查看历史抵扣券"/>

    </RelativeLayout>

    <com.ql.jcjr.view.PullToRefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ql.jcjr.view.XListView
            android:id="@+id/lv_available"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="@dimen/dimen_22px"
            android:listSelector="@color/transparent"
            android:paddingTop="@dimen/dimen_30px"
            android:paddingBottom="@dimen/dimen_30px"/>

    </com.ql.jcjr.view.PullToRefreshView>

    <include
        android:id="@+id/ll_tip_none"
        layout="@layout/tip_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>