                android:id="@+id/ll_day"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_68px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bid_history_detail"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_day_start"
                        style="@style/text_30_555"
                        android:layout_width="@dimen/auto_bid_day_w"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true"
                        android:hint="起始"
                        android:textColorHint="@color/text_hint_color" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_30px"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_20px"
                    android:layout_marginRight="@dimen/dimen_20px"
                    android:background="#9a9a9a"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bid_history_detail"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_day_end"
                        style="@style/text_30_555"
                        android:layout_width="@dimen/auto_bid_day_w"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true"
                        android:hint="结束"
                        android:textColorHint="@color/text_hint_color" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16px"
                    android:text="天"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/size_l" />

            </LinearLayout>

        </RelativeLayout>

