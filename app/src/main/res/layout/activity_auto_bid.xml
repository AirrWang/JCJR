    <LinearLayout
        android:id="@+id/ll_auto_bid_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ab_header"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_112px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:paddingLeft="@dimen/dimen_48px"
            android:paddingRight="@dimen/dimen_48px"
            android:gravity="center_vertical"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="自动投标"
                android:textColor="@color/font_black"
                android:textSize="@dimen/size_l" />

            <Switch
                android:id="@+id/switch_auto_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:switchMinWidth="@dimen/dimen_6px"
                android:thumb="@drawable/thumb_selector"
                android:track="@drawable/track_selector"
                android:showText="false"
                android:checked="false"
                android:textOn=" "
                android:textOff=" "/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_bid_amt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_112px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:paddingLeft="@dimen/dimen_48px"
            android:paddingRight="@dimen/dimen_48px"
            android:background="#fff"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="投资金额"
                android:textColor="@color/font_black"
                android:textSize="@dimen/size_l" />

            <com.ql.jcjr.view.InputAmountEditText
                android:id="@+id/et_bid_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_xl"
                android:textColor="@color/font_black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="输入自动投标金额"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="@color/text_hint_color"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_bid_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_112px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:background="#fff"
