<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ll_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_118px"
        android:paddingLeft="@dimen/dimen_48px"
        android:paddingRight="@dimen/dimen_48px"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_tel"
            style="@style/text_30_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="185****1234" />

        <TextView
            android:id="@+id/tv_amt"
            style="@style/text_30_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2000" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_30_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_m"
            android:text="10-09 13:43:23" />


    </RelativeLayout>

</LinearLayout>
