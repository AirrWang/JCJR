<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/tv_none_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_36px"
        android:layout_centerInParent="true"
        android:textSize="@dimen/size_xl"
        android:textColor="@color/font_grey"
        android:text="暂无相关信息"/>

    <ImageView
        android:layout_width="@dimen/dimen_300px"
        android:layout_height="@dimen/dimen_284px"
        android:layout_above="@id/tv_none_tip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_none"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/tv_none_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="@dimen/dimen_120px"
        android:layout_below="@id/tv_none_tip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_selector"
        android:text="返回"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_30px"
        android:visibility="gone"/>

</RelativeLayout>
