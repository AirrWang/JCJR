<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c_page_bg">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_20px"
        android:background="@color/c_fffff"
        android:id="@+id/ll_head_xsb"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_xszx_sy"
            android:layout_marginTop="@dimen/dimen_44px"
            android:layout_marginLeft="@dimen/dimen_20px"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_14px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_60px"
                android:id="@+id/ll_biao_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_6px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_apr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_64px"
                    android:textColor="@color/font_red"
                    android:text="18"/>
                <TextView
                    android:id="@+id/tv_apr_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_xxl"
                    android:textColor="@color/font_red"
                    android:text=" %"/>
            </LinearLayout>
            <TextView
                android:layout_below="@+id/ll_biao_left"
                android:layout_alignStart="@+id/ll_biao_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预期年化"
                android:textSize="@dimen/size_m"
                android:layout_alignLeft="@+id/ll_biao_left" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_16px"
                android:id="@+id/ll_biao_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_biao_left"
                android:layout_alignBottom="@id/ll_biao_left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_yyy_apr"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_annualized_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/size_l" />
                <TextView
                    android:id="@+id/tv_annualized_rate_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_l"
                    android:textColor="@color/font_red"
                    android:text="%"/>

                <TextView
                    android:id="@+id/tv_annualized_rate_gain_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_l"
                    android:textColor="@color/font_red"
                    android:text="+"/>
                <TextView
                    android:id="@+id/tv_annualized_rate_gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_l"
                    android:textColor="@color/font_red"
                    android:text="2"/>

                <TextView
                    android:id="@+id/tv_annualized_rate_gain_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/size_l" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dimen_64px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/size_l"
                        android:textColor="@color/font_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限"/>
                    <TextView
                        android:id="@+id/tv_xsb_day"
                        android:textSize="@dimen/size_l"
                        android:textColor="@color/font_black"
                        android:layout_marginLeft="@dimen/dimen_25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60天"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_14px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/size_l"
                        android:textColor="@color/font_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限购额度"/>
                    <TextView
                        android:id="@+id/tv_xsb_most"
                        android:textSize="@dimen/size_l"
                        android:textColor="@color/font_black"
                        android:layout_marginLeft="@dimen/dimen_25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000元"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_bid"
            android:layout_width="@dimen/home_recom_biao_w"
            android:layout_height="@dimen/home_recom_biao_btn_h"
            android:layout_marginTop="@dimen/dimen_66px"
            android:layout_marginBottom="@dimen/dimen_34px"
            android:background="@drawable/bg_btn_ljjr_sy"
            android:text="立即加入"
            android:textColor="@color/c_fefefe"
            android:textSize="@dimen/size_l" />
    </LinearLayout>

</LinearLayout>