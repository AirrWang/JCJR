            <TextView
                android:id="@+id/tv_bid_confirm_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:textColor="@color/font_user_agreement"
                android:textSize="@dimen/size_xs"
                android:text="我已阅读并同意"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bid_confirm_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_main"
            android:textSize="@dimen/size_xs"
            android:text="《借款协议》"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_main"
            android:textSize="@dimen/size_xs"
            android:text="和"/>
        <TextView
