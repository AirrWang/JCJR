<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:bottom_divider_visibility="gone"
        bar:left_first_visibility="visible"
        bar:title="确认出借"/>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_below="@+id/ab_header"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/zj_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_241px">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资金额："
                    android:textColor="@color/font_actionbar_color"
                    android:textSize="@dimen/size_l"/>
                <TextView
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:id="@+id/tv_bid_confirm_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_actionbar_color"
                    android:textSize="@dimen/size_xxl" />
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_3px"
            android:layout_height="@dimen/dimen_114px"
            android:src="@drawable/zj_fgx"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限："
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                    <TextView

                        android:id="@+id/tv_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_16px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预期利率："
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                    <TextView

                        android:id="@+id/tv_annualized_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_16px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预期收益："
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                    <TextView

                        android:id="@+id/tv_bid_confirm_earn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_actionbar_color"
                        android:textSize="@dimen/size_m"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hb"
        android:paddingLeft="@dimen/dimen_30px"
        android:paddingRight="@dimen/dimen_30px"
        android:gravity="center_vertical"
        android:background="@color/c_fffff"
        android:layout_marginTop="@dimen/dimen_20px"
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_98px">
        <TextView
            android:textSize="@dimen/size_l"
            android:textColor="@color/font_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包"/>
        <TextView
            android:id="@+id/tv_bid_hb_num"
            android:paddingTop="@dimen/dimen_2px"
            android:paddingBottom="@dimen/dimen_2px"
            android:paddingLeft="@dimen/dimen_8px"
            android:paddingRight="@dimen/dimen_8px"
            android:background="@drawable/bg_filled_corner_b74f4f"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:layout_width="wrap_content"
            android:textColor="@color/c_fffff"
            android:layout_height="wrap_content"
            android:text="已选一张"/>
        <TextView
            android:textSize="@dimen/size_l"
            android:gravity="end"
            android:id="@+id/tv_bid_confirm_hb"
            android:textColor="@color/font_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_16px"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_action_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_realpay"
        android:paddingLeft="@dimen/dimen_30px"
        android:paddingRight="@dimen/dimen_30px"
        android:gravity="center_vertical"
        android:background="@color/c_fffff"
        android:layout_marginTop="@dimen/dimen_1px"
        android:layout_below="@+id/ll_hb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_98px">
        <TextView
            android:textSize="@dimen/size_l"
            android:textColor="@color/font_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"/>
        <TextView
            android:textSize="@dimen/size_xxl"
            android:gravity="end"
            android:id="@+id/tv_bid_confirm_pay"
            android:textColor="@color/font_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元"
            android:textSize="@dimen/size_xxl"
            android:textColor="@color/font_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:paddingRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:layout_below="@+id/ll_realpay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/font_grey"
            android:textSize="@dimen/size_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额"/>
        <TextView
            android:id="@+id/tv_mymoney"
            android:textColor="@color/font_black"
            android:textSize="@dimen/size_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000"/>
        <TextView
            android:textColor="@color/font_grey"
            android:textSize="@dimen/size_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"/>
    </LinearLayout>

    <LinearLayout
