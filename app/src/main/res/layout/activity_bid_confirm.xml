<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:bottom_divider_visibility="gone"
        bar:left_first_visibility="visible"
        bar:title="确认出借"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ab_header"
        android:layout_marginTop="@dimen/row_distance"
        android:orientation="vertical">

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_bid_confirm_name"
            app:titleTextLess="产品名称" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_annualized_rate"
            app:titleTextLess="预期利率" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_term"
            app:bottomLineVisibilityLess="gone"
            app:titleTextLess="项目期限" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:layout_marginTop="@dimen/row_distance"
            android:id="@+id/tv_bid_confirm_money"
            app:titleTextLess="投资金额" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_bid_confirm_earn"
            app:titleTextLess="预期收益" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_repayment_type"
            app:titleTextLess="收益方式" />

        <com.ql.jcjr.view.ImageTextHorizontalBarLess
            style="@style/ithb_no_left_right_icon"
            android:id="@+id/tv_bid_confirm_hb"
            app:bottomLineVisibilityLess="gone"
            app:rightIconVisibilityLess="visible"
            app:titleTextLess="红包" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/row_text_margin"
            android:layout_marginTop="@dimen/dimen_36px"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_bid_confirm_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_bid_confirm_checkbox"
                    android:layout_width="@dimen/dimen_36px"
                    android:layout_height="@dimen/dimen_36px"
                    android:scaleType="fitXY"
                    android:src="@drawable/checkbox_select"/>

                <TextView
                    android:id="@+id/tv_bid_confirm_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_24px"
                    android:textColor="@color/font_user_agreement"
                    android:textSize="@dimen/size_xs"
                    android:text="我已阅读并同意"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_bid_confirm_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_main"
                android:textSize="@dimen/size_xs"
                android:text="《借款协议》"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_main"
                android:textSize="@dimen/size_xs"
                android:text="和"/>
            <TextView
                android:id="@+id/tv_bid_danger_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_main"
                android:textSize="@dimen/size_xs"
                android:text="《风险提示书》"/>

            
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ab_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bid_operate_bar_h"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:layout_weight="0">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_bid_confirm_pay_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/font_actionbar_color_less"
                    android:textSize="@dimen/size_l"
                    android:text="实付:￥"/>

                <TextView
                    android:id="@+id/tv_bid_confirm_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_bid_confirm_pay_pre"
                    android:layout_alignBaseline="@id/tv_bid_confirm_pay_pre"
                    android:gravity="center"
                    android:textSize="@dimen/size_xxl"
                    android:textColor="@color/font_actionbar_color_less"
                    android:text="100000"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btn_main"
            android:textSize="@dimen/size_xl"
            android:textColor="#fff"
            android:gravity="center"
            android:text="确认出借"/>

    </LinearLayout>


</RelativeLayout>
