<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/row_distance"
    android:orientation="vertical">

    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/ithb_project_detail"
        app:rightTitleVisibility="gone"
        app:titleTextLess="项目详情" />


    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/ithb_bid_record"
        app:rightTitleColor="@color/font_grey_three"
        app:titleTextLess="投资记录" />


    <com.ql.jcjr.view.ImageTextHorizontalBarLess
        style="@style/ithb_no_left_icon"
        android:id="@+id/ithb_bid_reward"
        app:bottomLineVisibilityLess="gone"
        app:rightTitleVisibility="gone"
        app:titleTextLess="安全保障" />


</LinearLayout>