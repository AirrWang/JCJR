<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120px"
    android:background="@color/white"

    android:paddingLeft="@dimen/dimen_24px"
    android:paddingRight="@dimen/dimen_24px"
    android:orientation="vertical">
    <LinearLayout
        android:paddingRight="@dimen/dimen_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="@dimen/dimen_90px"
            android:layout_height="@dimen/dimen_90px"
            android:background="@color/c_fffff">

            <ImageView
                android:id="@+id/civ_icon"
                android:layout_width="@dimen/dimen_64px"
                android:layout_height="@dimen/dimen_64px"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_name"
                android:singleLine="true"
                android:text="上海浦东发展银行"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/size_l"
                />
            <TextView
                android:id="@+id/tv_bank_bq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_fffff"
                android:textSize="@dimen/size_xs"
                android:paddingLeft="@dimen/dimen_16px"
                android:paddingRight="@dimen/dimen_16px"
                android:paddingTop="@dimen/dimen_2px"
                android:paddingBottom="@dimen/dimen_2px"
                />

            <TextView
                android:singleLine="true"
                android:gravity="end"
                android:id="@+id/tv_bank_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/size_m" />

        </LinearLayout>
    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_1px"
    android:background="@color/divider_color"/>
</LinearLayout>