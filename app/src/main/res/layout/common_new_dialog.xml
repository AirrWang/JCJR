<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60px"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_60px"
        android:background="@drawable/bg_common_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_80px"
            android:layout_marginLeft="@dimen/dimen_24px"
            android:layout_marginRight="@dimen/dimen_24px"
            android:text="确认关闭自动投标吗？"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/size_l" />

        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24px"
            android:layout_marginLeft="@dimen/dimen_24px"
            android:layout_marginRight="@dimen/dimen_24px"
            android:text="您的资金可能会闲置哦"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/size_xl" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_60px"
            android:layout_marginBottom="@dimen/dimen_54px"
            android:paddingLeft="@dimen/dimen_40px"
            android:paddingRight="@dimen/dimen_40px">

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/register_button_selector"
                android:text="立即关闭"
                android:textColor="@color/btn_main"
                android:textSize="@dimen/size_m"/>

            <Button
                android:id="@+id/dialog_btn_ok"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/login_button_selector"
                android:layout_alignParentRight="true"
                android:text="再用用看"
                android:textColor="#fff"
                android:textSize="@dimen/size_m"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/dialog_top_icon"
        android:layout_width="@dimen/dimen_120px"
        android:layout_height="@dimen/dimen_120px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_top_common_dialog" />

</RelativeLayout>