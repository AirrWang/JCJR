<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ql.jcjr.activity.NoviceExclusiveActivity">

    <!--<com.ql.freepay.view.ActionBar-->
        <!--android:id="@+id/ab_header"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--bar:bottom_divider_visibility="gone"-->
        <!--bar:left_first_visibility="visible"-->
        <!--bar:title="新手专享"/>-->

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:title="新手专享"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ab_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen_132px">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/text_24_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_70px"
                    android:text="年化收益率"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_apr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_6px"
                        android:text="10.8"
                        android:textColor="@color/title_bg_color"
                        android:textSize="@dimen/dimen_100px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/title_bg_color"
                        android:textSize="@dimen/dimen_48px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:layout_marginTop="@dimen/dimen_80px"
                    android:layout_marginBottom="@dimen/dimen_80px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_term"
                        style="@style/text_20_999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="投资期限 1 月"/>

                    <TextView
                        android:id="@+id/tv_min_amt"
                        style="@style/text_20_999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起投 100 元"/>

                    <TextView
                        android:id="@+id/tv_quota"
                        style="@style/text_20_999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="限额 10000 元"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_bid_detail_second"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bid_operate_bar_h"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_calculator"
            android:layout_width="@dimen/bid_operate_bar_h"
            android:layout_height="@dimen/bid_operate_bar_h"
            android:src="@drawable/ic_calculator"/>

        <TextView
            android:id="@+id/tv_bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bid_operate_bar_h"
            android:layout_marginTop="@dimen/dimen_6px"
            android:layout_marginBottom="@dimen/dimen_6px"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/text_32_fefefe"
            android:background="@color/btn_main"
            android:text="立即投标"/>

    </LinearLayout>

</RelativeLayout>
