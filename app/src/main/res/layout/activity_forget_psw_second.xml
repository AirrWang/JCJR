<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_page_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.ql.jcjr.activity.InputVerifyCodeActivity">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:bottom_divider_visibility="gone"
        bar:left_first_visibility="visible"/>


    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60px"
        style="@style/text_30_666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20px"
        style="@style/text_30_666"
        android:text="请查看短信输入验证码"/>

    <com.ql.jcjr.view.PwdEditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130px"
        android:layout_marginLeft="@dimen/dimen_36px"
        android:layout_marginRight="@dimen/dimen_36px"
        android:layout_marginTop="@dimen/dimen_78px"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:enabled="true"
        android:focusable="true"
        android:maxLength="6"
        android:numeric="integer"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_52px">

        <TextView
            android:id="@+id/tv_get_verify_code"
            style="@style/text_30_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_36px"
            android:padding="@dimen/dimen_6px"
            android:text="重新获取"
            android:textColor="@color/c_999999"/>

    </LinearLayout>

</LinearLayout>
