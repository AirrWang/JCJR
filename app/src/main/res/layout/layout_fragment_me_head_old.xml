<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_view_height"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32px">

        <com.ql.jcjr.view.CircleImageView
            android:id="@+id/civ_user_icon"
            android:layout_width="@dimen/dimen_58px"
            android:layout_height="@dimen/dimen_58px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:src="@drawable/default_user_icon"/>

        <LinearLayout
            android:id="@+id/ll_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12px"
            android:layout_toRightOf="@id/civ_user_icon"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代用名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_22px"/>

                <ImageView
                    android:id="@+id/iv_user_level"
                    android:layout_width="@dimen/dimen_22px"
                    android:layout_height="@dimen/dimen_22px"
                    android:layout_marginLeft="@dimen/dimen_6px"
                    android:src="@drawable/ic_level_1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2px"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_22px"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12px"
            android:layout_toRightOf="@id/civ_user_icon"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_4px"
            style="@style/text_30_white"
            android:textSize="@dimen/dimen_34px"
            android:text="未登录"/>

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_30px"
            android:layout_toLeftOf="@+id/btn_notice"
            android:src="@drawable/ic_setting_white"/>

        <ImageView
            android:id="@+id/btn_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_30px"
            android:src="@drawable/ic_notice"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50px"
        android:text="- -"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_48px"/>

    <TextView
        android:id="@+id/tv_total_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10px"
        android:text="总资产（元）"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_24px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_44px"
        android:layout_marginTop="@dimen/dimen_60px"
        android:gravity="center_vertical">

        <LinearLayout
            style="@style/style_assets_ll">

            <TextView
                android:id="@+id/tv_balance"
                style="@style/style_assets_title"
                android:text="- -"/>

            <TextView
                style="@style/style_assets_desc"
                android:text="可用余额"/>
        </LinearLayout>

        <LinearLayout
            style="@style/style_assets_ll">

            <TextView
                android:id="@+id/tv_accumulated_income"
                style="@style/style_assets_title"
                android:text="- -"/>

            <TextView
                style="@style/style_assets_desc"
                android:text="累计收益"/>
        </LinearLayout>

        <LinearLayout
            style="@style/style_assets_ll">

            <TextView
                android:id="@+id/tv_income_received"
                style="@style/style_assets_title"
                android:text="- -"/>

            <TextView
                style="@style/style_assets_desc"
                android:text="待收收益"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>