<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ql.jcjr.activity.VerifyLoginPwdActivity"
    xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:left_first_visibility="visible"
        bar:bottom_divider_visibility="gone"
        bar:title="设置支付密码"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40px"
        style="@style/text_30_666"
        android:text="请输入登录密码，以验证身份"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_114px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@drawable/corner_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@null"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            style="@style/text_f04_30_c05_999999"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/common_btn_style"
        android:layout_marginTop="@dimen/dimen_170px"
        android:text="下一步"/>

</LinearLayout>
