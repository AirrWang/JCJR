<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_20px"
        android:textColor="@color/white"
        android:text="2017年4月21日 14:45"
        android:layout_marginTop="@dimen/dimen_40px"
        android:paddingTop="@dimen/dimen_10px"
        android:paddingBottom="@dimen/dimen_10px"
        android:paddingLeft="@dimen/dimen_30px"
        android:paddingRight="@dimen/dimen_30px"
        android:background="@drawable/bg_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_36px"
        android:layout_marginRight="@dimen/dimen_36px"
        android:layout_marginTop="@dimen/dimen_25px"
        android:background="@drawable/corner_white_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_38px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:text="2017年4月21日 14:45"
            android:textColor="@color/c03_333333"
            android:textSize="@dimen/dimen_28px"/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/text_20_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_38px"
            android:layout_marginTop="@dimen/dimen_20px"
            android:text="2017年4月21日 14:45"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_46px"
            android:layout_marginLeft="@dimen/dimen_38px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:text="2017年4月21日 14:45"
            android:textColor="@color/c03_333333"
            android:textSize="@dimen/dimen_24px"/>

        <View style="@style/common_divider_without_margin"/>

        <LinearLayout
            android:id="@+id/ll_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_20_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20px"
                android:layout_marginLeft="@dimen/dimen_38px"
                android:layout_marginTop="@dimen/dimen_20px"
                android:layout_weight="1"
                android:text="查看详情"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_30px"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>