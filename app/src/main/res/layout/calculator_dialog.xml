<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="bottom|right"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_36px"
        android:layout_marginRight="@dimen/dimen_36px"
        android:background="@drawable/corner_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/delete_popup_tx"
                android:padding="@dimen/dimen_36px"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36px"
                android:layout_marginBottom="@dimen/dimen_36px"
                android:textSize="@dimen/size_36"
                android:textColor="@color/indicator_color_selected"
                android:text="收益计算器"/>
        </RelativeLayout>



        <View style="@style/common_divider_without_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:layout_marginBottom="@dimen/dimen_40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_annualized_rate"
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="年化 10.8%"/>

            <TextView
                android:id="@+id/tv_term"
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="期限 31 天"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_86px"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:orientation="horizontal"
            android:background="@drawable/corner_white_ddd_padding">

            <com.ql.jcjr.view.InputAmountEditText
                android:id="@+id/et_amt"
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:layout_marginRight="@dimen/dimen_30px"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:textColorHint="@color/text_hint_color"
                android:background="@null"
                android:hint="请输入投资金额"/>

            <TextView
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="元"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:layout_marginBottom="@dimen/dimen_40px"
            android:orientation="horizontal">

            <TextView
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="预期收益"/>

            <TextView
                android:id="@+id/tv_expected_return"
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/c_fc0707"
                android:text="0.00"/>

        </LinearLayout>

        <View style="@style/common_divider_without_margin"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
              android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:layout_marginBottom="@dimen/dimen_40px"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="还款日期"/>

            <TextView
                android:id="@+id/tv_repayment_date"
                style="@style/text_30_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2017-07-10"/>

        </LinearLayout>

    </LinearLayout>
    <include
        android:layout_marginTop="@dimen/dimen_80px"
        android:id="@+id/ll_jianpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_jianpan"/>


</LinearLayout>