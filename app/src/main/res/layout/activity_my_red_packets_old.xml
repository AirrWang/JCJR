<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ql.jcjr.activity.MyRedPacketsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/title_bg_color">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_view_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:padding="@dimen/dimen_6px"
                android:src="@drawable/btn_action_bar_back_n"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16px"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:layout_marginRight="@dimen/dimen_100px"
                android:layout_marginTop="@dimen/dimen_16px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tab_available"
                    style="@style/style_red_packets"
                    android:background="@drawable/tab_left_red_packet_selector"
                    android:checked="true"
                    android:text="可用红包"/>

                <RadioButton
                    android:id="@+id/tab_used"
                    style="@style/style_red_packets"
                    android:background="@drawable/tab_mindle_red_packet_selector"
                    android:text="已用红包"/>

                <RadioButton
                    android:id="@+id/tab_overdue"
                    style="@style/style_red_packets"
                    android:background="@drawable/tab_right_red_packet_selector"
                    android:text="过期红包"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <com.ql.jcjr.view.NoScrollViewPager
        android:id="@+id/cvw_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/another_login"
        android:layout_below="@+id/ll_layout"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

</LinearLayout>
