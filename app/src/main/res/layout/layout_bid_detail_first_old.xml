<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_24_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_70px"
        android:text="年化收益率"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_48px">

        <LinearLayout
            android:id="@+id/ll_biao_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.8"
                android:textColor="@color/title_bg_color"
                android:textSize="@dimen/dimen_100px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/title_bg_color"
                android:textSize="@dimen/dimen_100px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_biao_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12px"
            android:layout_toRightOf="@id/ll_biao_detail_left"
            android:layout_alignBottom="@id/ll_biao_detail_left"
            android:paddingBottom="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/title_bg_color"
                android:textSize="@dimen/dimen_48px"/>

            <TextView
                android:id="@+id/tv_apr_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.8"
                android:textColor="@color/title_bg_color"
                android:textSize="@dimen/dimen_48px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/title_bg_color"
                android:textSize="@dimen/dimen_48px"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_80px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_term"
            style="@style/text_20_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="投资期限 1 月"/>

        <TextView
            android:id="@+id/tv_min_amt"
            style="@style/text_20_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="起投金额 100 元"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/progressbar_horizontal_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6px"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_80px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_54px"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_54px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_loan"
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="借款金额 20 万元"/>

        <TextView
            android:id="@+id/tv_surplus"
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="剩余额度 7900 元"/>

    </LinearLayout>

    <View style="@style/common_divider_without_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_50px"
        android:layout_marginBottom="@dimen/dimen_50px"
        android:orientation="horizontal">

        <TextView
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="还款方式"/>

        <TextView
            android:id="@+id/tv_repayment_type"
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="到期全额还款"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_50px"
        android:layout_marginBottom="@dimen/dimen_50px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="还款日期"/>

        <TextView
            android:id="@+id/tv_repayment_term"
            style="@style/text_24_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2017-04-07"/>

    </LinearLayout>

</LinearLayout>