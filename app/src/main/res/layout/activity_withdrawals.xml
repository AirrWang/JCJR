<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ql.jcjr.activity.WithdrawalsActivity">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:title="提现"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现银行卡为绑定的投资银行卡"
                android:gravity="center"
                android:textSize="@dimen/size_xs"
                android:textColor="@color/font_grey"
                android:layout_marginLeft="@dimen/row_text_margin"
                android:layout_marginTop="@dimen/dimen_16px"
                android:layout_marginBottom="@dimen/dimen_16px"/>

            <include
                layout="@layout/item_bank_card"
                android:id="@+id/ll_bank_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_bind_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130px"
                android:gravity="center"
                style="@style/text_34_ff8f39"
                android:textColor="@color/btn_main"
                android:text="请绑定银行卡"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_distance"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_height"
                    android:background="#FBFBFB"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/row_text_margin"
                    android:paddingLeft="@dimen/row_text_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_s_m_c_b"
                        android:text="可用金额"/>

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_46px"
                        style="@style/text_s_m_c_b"
                        android:text="0.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_height"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/row_text_margin"
                    android:paddingLeft="@dimen/row_text_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_s_m_c_b"
                        android:text="提现金额"/>

                    <com.ql.jcjr.view.InputAmountEditText
                        android:id="@+id/et_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_46px"
                        android:layout_marginRight="@dimen/row_text_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        style="@style/text_s_m_c_b"
                        android:textColorHint="@color/text_hint_color"
                        android:hint="输入提现金额"/>

                    <TextView
                        android:id="@+id/tv_get_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="余额全提"
                        android:textColor="@color/btn_main"
                        android:textSize="@dimen/size_m"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_last_free_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_xs"
                    android:textColor="@color/btn_main"
                    android:layout_marginLeft="@dimen/row_text_margin"
                    android:layout_marginTop="@dimen/dimen_16px"
                    android:layout_marginBottom="@dimen/dimen_16px"
                    android:text="免费提现次数：3次"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_withdrawals"
                style="@style/common_btn_style"
                android:layout_marginTop="@dimen/dimen_120px"
                android:text="确认"/>

            <TextView
                android:id="@+id/tv_cash_service_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_distance"
                android:gravity="center"
                android:text="所需手续费0元"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/size_xs"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_48px"
                android:layout_marginLeft="@dimen/row_text_margin"
                android:drawableLeft="@drawable/icon_warming"
                android:drawablePadding="@dimen/dimen_16px"
                android:textSize="@dimen/size_xs"
                android:textColor="@color/font_grey"
                android:text="提现说明："/>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16px"
                android:layout_marginLeft="@dimen/row_text_margin"
                android:layout_marginRight="@dimen/row_text_margin"
                android:textSize="@dimen/size_xs"
                android:textColor="@color/font_grey"
                android:text="16:00之前提现当天到帐，16:00之后提现第二天到帐；特殊情况除外，用户充值资金在15天内提现将扣除1%的提现手续费。"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
