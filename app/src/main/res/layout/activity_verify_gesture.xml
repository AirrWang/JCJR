<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal"
    tools:context="com.ql.jcjr.activity.VerifyGestureActivity">

    <com.ql.jcjr.view.ActionBar
        android:id="@+id/ab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_first_visibility="visible"
        app:bottom_divider_visibility="gone"
        app:title="验证手势密码"/>

    <com.ql.jcjr.view.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/dimen_144px"
        android:layout_height="@dimen/dimen_144px"
        android:layout_marginTop="@dimen/dimen_90px"
        android:src="@drawable/gesture_user_icon"/>

    <!--<TextView-->
        <!--android:id="@+id/tv_phone_num"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_30px"-->
        <!--style="@style/text_f04_30_c05_999999"/>-->

    <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_90px"
        android:textSize="@dimen/size_l"
        android:textColor="@color/font_pink_light"
        android:text="请绘制旧手势密码"/>


    <com.ql.jcjr.view.gesturecipher.GestureLockViewGroup
        android:id="@+id/iv_gesture_view"
        android:layout_width="@dimen/dimen_640px"
        android:layout_height="@dimen/dimen_640px"
        android:layout_marginTop="@dimen/dimen_90px"
        android:gravity="center_vertical"
        app:color_finger_on="@color/btn_main"
        app:color_finger_up="@color/btn_main"
        app:color_no_finger_inner_circle="#dddad5"
        app:color_no_finger_outer_circle="@color/transparent"
        app:count="3"
        app:tryTimes="3"/>

</LinearLayout>
