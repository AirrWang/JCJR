<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:top="4dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FFCCA970" android:endColor="#0FCCA970" android:angle="270" />
            <!--<padding android:left="5dp" android:top="3dp" android:right="5dp" android:bottom="3dp" />-->
            <corners android:radius="@dimen/dimen_180px" />
        </shape>
    </item>

    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/btn_main"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dimen_180px"/>
        </shape>
    </item>

</layer-list>